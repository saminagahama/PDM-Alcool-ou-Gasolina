<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:backgroundTint="@color/purple_200"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300sp"
        android:layout_height="550sp"
        android:layout_marginStart="3sp"
        android:layout_marginEnd="3sp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="?android:backgroundTint"
        android:orientation="vertical"
        android:scrollbarSize="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="uma bomba de gasolina ilustrando o app"
            android:paddingVertical="10sp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10sp"
            android:text="Gasolina ou Álcool?"
            android:textAlignment="center"
            android:textColor="#492C4E"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edGasolina"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginHorizontal="30sp"
            android:ems="10"
            android:hint="Preço da gasolina"
            android:inputType="numberDecimal"
            android:textColorHint="#393939"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edAlcool"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginHorizontal="30sp"
            android:ems="10"
            android:hint="Preço do álcool"
            android:inputType="numberDecimal"
            android:textColorHint="#393939"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/swPercentual"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="right"
            android:layout_marginHorizontal="30sp"
            android:text="75%"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20sp"
            android:backgroundTint="#492C4E"
            android:text="Calcular"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btCalcular" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>